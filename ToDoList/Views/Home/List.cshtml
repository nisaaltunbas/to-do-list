@{
    ViewData["Title"] = "List";
}

@model List<List>

<div class="text-center">
    <h1 class="display-4">To Do List</h1>
    <br />
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Price</th>
                <th>Description</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @{
                foreach (var list in Model)
                {
                    <tr>
                        <td>
                            @list.Id
                        </td>
                        <td>
                            $@list.Price
                        </td>
                        <td>
                            @list.Description
                        </td>
                        <td>
                            <a asp-action="CreateList" asp-route-id="@list.Id">Edit</a>
                            <a asp-action="DeleteList" asp-route-id="@list.Id">Delete</a>
                        </td>
                    </tr>
                }
            }
        </tbody>
        <hr />
        <h3>Total Price $@ViewBag.List</h3>
    </table>
    
</div>
